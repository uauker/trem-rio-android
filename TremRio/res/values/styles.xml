<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/orange</item>
        <item name="titleTextStyle">@style/Custom.ActionBarTitle</item>
    </style>

    <style name="Custom.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
    </style>

</resources>